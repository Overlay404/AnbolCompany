<Page x:Class="AnbolCompany.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AnbolCompany"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="28*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="password" Width="200"/>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="login" Width="200"/>
        </StackPanel>
        <Button Grid.Row="3" HorizontalAlignment="Center" Content="Вход" Height="30" Width="60" Click="Button_Click"/>

    </Grid>
</Page>
